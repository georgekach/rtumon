extends ../sblayout
block content
    .page-header
        h3 New Role
    form.form-horizontal(action='/vendor/edit/#{vendor.id}', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label.col-sm-2.control-label(for='vendorname') Vendor Name
            .col-sm-4
                input.form-control(type='text', name='vendorname', id='vendorname', value='#{vendor.vendorname}')
        .form-group
            label.col-sm-2.control-label(for='companyname') Company Name
            .col-sm-4
                input.form-control(type='text', name='companyname', id='companyname', value='#{vendor.companyname}')
        .form-group
            label.col-sm-2.control-label(for='address') Address
            .col-sm-4
                input.form-control(type='text', name='address', id='address', value='#{vendor.address}')
        .form-group
            label.col-sm-2.control-label(for='notes') Notes
            .col-sm-4
                input.form-control(type='text', name='notes', id='notes', value='#{vendor.notes}')
        .form-group
            label.col-sm-2.control-label(for='billingaddress') Billing Address
            .col-sm-4
                input.form-control(type='text', name='billingaddress', id='billingaddress', value='#{vendor.billingaddress}')
        .form-group
            label.col-sm-2.control-label(for='billingfrequency') Billing frequency
            .col-sm-4
                input.form-control(type='text', name='billingfrequency', id='billingfrequency', value='#{vendor.billingfrequency}')
        .form-group
            label.col-sm-2.control-label(for='billingemail') Billing Email
            .col-sm-4
                input.form-control(type='text', name='billingemail', id='billingemail', value='#{vendor.billingemail}')

        .form-group
            .col-sm-offset-2.col-sm-4
                button.btn.btn.btn-primary(type='submit')
                    span.ion-edit
                    | Save Changes
