extends ../sblayout
block content
    h3 Vendors List
    a.btn.btn-primary(href='/vendor/create') Create New
    table.table.table-striped
        thead
            tr
                td Vendor Name
                td Company Name
                td Address
        tbody
            - each vendor in vendors
                tr
                    td #{vendor.vendorname}
                    td #{vendor.companyname}
                    td #{vendor.address}
                    td
                        a(href='/vendor/edit/#{vendor.id}',data-toggle='tooltip',data-placement='top')
                            span
                            i.fa.fa-pencil.fa-fw
                        a(href='/vendor/delete/#{vendor.id}',data-toggle='tooltip',data-placement='top')
                            span
                            i.fa.fa-trash.fa-fw