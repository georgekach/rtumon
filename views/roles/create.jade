extends ../sblayout
block content
    .page-header
        h3 New Role
    form.form-horizontal(action='/roles/create', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label.col-sm-2.control-label(for='deviceId') Role Name
            .col-sm-4
                input.form-control(type='text', name='rolename', id='rolename')
        .form-group
            label.col-sm-2.control-label(for='description') Description
            .col-sm-4
                input.form-control(type='text', name='description', id='description')
        .form-group
            .col-sm-offset-2.col-sm-4
                button.btn.btn.btn-primary(type='submit')
                    span.ion-edit
                    | Save Changes